<% provide(:title, @employee.name) %>
<div>
    <section>
<h1> <%= %> </h1>
     
      <h3>
        <%= @employee.name %> 
      </h3>

      <h4>
        <strong>ID:</strong>
        <%= @employee.employee_id %>
      </h4>

      <h4>
        <strong>Mobile:</strong>
        <%= @employee.mobile %>
      </h4>
      
      <h4>
        <strong>Department:</strong>
        <%= @employee.department %>
      </h4>

      <h4>
        <strong>Module:</strong>
        <%= @employee.deptType %>
      </h4>

      <h4>
         <strong>Blood group:</strong>
          <%= @employee.blood_group %>
      </h4>

      <h4>
        <strong>Date of birth:</strong>
        <%= @employee.date_of_birth %>
      </h4>  

      <h4>
        <strong>Hiring Date:</strong>
        <%= @employee.emp_date %>
      </h4>  

       <h4>
        <strong>Medical Exams today:</strong>
        <%= @medical_exams %>
      </h4>      

        <%= link_to 'Done', done_exams_employees_path(:employee_id => @employee.employee_id), class: "btn btn-primary"   %>
        <%= link_to 'Miss', miss_exams_employees_path(:employee_id => @employee.employee_id), class: "btn btn-primary"   %>

    </section>
  </aside>
</div>


<div>

  <h3>List of Vaccines</h3>

    <% @vaccines.each do |vaccine| %>
      <h5><%= vaccine.name %></h5>
    <% end %>

  <h3>List of Diseases</h3>

    <% @diseases.each do |disease| %>
      <h5><%= disease.name %></h5>
    <% end %>


   <div class="span6 offset3">
   
    <%= form_tag add_vaccine_employees_path, multipart: true do %>
 
    <h5>Add Vaccine:</h5>
    <%= text_field_tag :name %>
    <%= hidden_field_tag :employee_id, @employee.employee_id %>
    <%= submit_tag "Add", class: "btn btn-large btn-primary"  %>

    <% end %>
  </div>
  
   <div class="span6 offset3">
   
    <%= form_tag add_disease_employees_path, multipart: true do %>
 
    <h5>Add Disease:</h5>
    <%= text_field_tag :name %>
    <%= hidden_field_tag :employee_id, @employee.employee_id %>
    <%= submit_tag "Add", class: "btn btn-large btn-primary"  %>

    <% end %>
  </div>


</div>