<% provide(:title, 'employee') %>
<h1>New Employee</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@employee) do |f| %>
      <%= render 'shared/error_messages_e' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :employee_id, "ID" %>
      <%= f.text_field :employee_id %>

      <%= f.label :department %>
      <%= f.text_field :department %>

      <%= f.label :blood_group %>
      <%= f.text_field :blood_group %>

      <%= f.label :date_of_birth %>
      <%= f.date_select :date_of_birth, :start_year => 1900 %>

      <%= f.label :Transfer %>
      <%= f.text_field :Transfer %>

      <%= f.submit "Create Employee", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
